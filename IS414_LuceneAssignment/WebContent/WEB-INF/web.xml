<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>IS414_LuceneAssignment</display-name>
  <welcome-file-list>
    <welcome-file>search.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>IndexingServlet</servlet-name>
    <servlet-class>com.search.controller.IndexingServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>IndexingServlet</servlet-name>
    <url-pattern>/IndexingServlet</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>SearchServlet</servlet-name>
  	<servlet-class>com.search.controller.SearchServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>SearchServlet</servlet-name>
  	<url-pattern>/SearchServlet</url-pattern>
  </servlet-mapping>
</web-app>